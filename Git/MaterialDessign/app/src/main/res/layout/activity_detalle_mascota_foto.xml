<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView

        android:id="@+id/cvMascotasDetalle2"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/cardview_default_elevation">

            <ImageView
                android:id="@+id/imgFoto2"
                android:layout_width="320dp"
                android:layout_height="290dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/buldogfrances"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plikes"
                        android:textSize="@dimen/nombreRaza"
                        android:id="@+id/tvLikes2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_horizontal" />

                    <ImageView
                        android:id="@+id/imgHuesoAmarillo2"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/huesoamarillo"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>