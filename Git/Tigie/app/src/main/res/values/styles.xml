<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="styleChapter" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="styleChapterDescr" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="styleChapitulo" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorText</item>
    </style>


    <style name="styleChapituloCode" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="styleChapituloDescr" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorAzul</item>
    </style>

</resources>
