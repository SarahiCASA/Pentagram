<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/cvFractions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/cardview_default_elevation"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/cap_01"
                android:id="@+id/tariffFractionIcon"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tariffFractionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapterDescr"
                style="@style/styleChapterDescr"
                android:textSize="@dimen/text_chapters"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical|right"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvtariffFractionCode"
                android:layout_toEndOf="@+id/tvtariffFractionCode" />

            <TextView
                android:id="@+id/tvtariffFractionCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter"
                style="@style/styleChapter"
                android:textSize="@dimen/text_chapters"
                android:textStyle="bold"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tariffFractionIcon"
                android:layout_toEndOf="@+id/tariffFractionIcon" />

            <TextView
                android:id="@+id/idTariffFraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_chapter"
                style="@style/styleChapterDescr"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tariffFractionDescription"
                android:layout_toEndOf="@+id/tariffFractionDescription" />


            <TextView
                android:id="@+id/idTariffSubheadingFrac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:visibility="invisible"
                android:layout_alignBaseline="@+id/tariffFractionDescription"
                android:layout_alignBottom="@+id/tariffFractionDescription"
                android:layout_toRightOf="@+id/idTariffFraction"
                android:layout_toEndOf="@+id/idTariffFraction" />


        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>