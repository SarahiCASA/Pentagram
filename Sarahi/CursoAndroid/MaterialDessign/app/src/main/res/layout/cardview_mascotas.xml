<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvMascotas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/cardview_default_elevation">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="250dp"
            android:layout_height="210dp"
            android:src="@drawable/buldogfrances"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_height="38dp"
                android:layout_width="38dp"
                android:background="@drawable/hueso"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_alignTop="@+id/imgHuesoAmarillo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mascota"
                    android:textSize="@dimen/nombreCV"
                    android:id="@+id/nombre" />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:text="@string/raza"
                    android:textSize="@dimen/nombreRaza"
                    android:id="@+id/mascotaRaza"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </LinearLayout>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/plikes"
                android:textSize="@dimen/nombreRaza"
                android:id="@+id/tvLikes"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/imgHuesoAmarillo"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/huesoamarillo"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>



        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>